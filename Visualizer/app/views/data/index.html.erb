				<%= text_field_tag(:file, nil, { placeholder: 'Table File', :class => 'span2'}) %>
				<%= submit_tag('Load New Table', :class => 'btn') %>
			<% end %>

		</div>
	</div>

	<div id="attributes">
		<h3> Attributes </h3>
